@using ASP_MVC.Handlers
@inject SessionManager sessionManager


@model ASP_MVC.Models.Jeu.JeuCreateForm

@{
    ViewData["Title"] = "Create";
}

<h1>Creer un nouveau jeu</h1>

<h4>JeuCreateForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeMin" class="control-label"></label>
                <input asp-for="AgeMin" class="form-control" />
                <span asp-validation-for="AgeMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeMax" class="control-label"></label>
                <input asp-for="AgeMax" class="form-control" />
                <span asp-validation-for="AgeMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Joueur_Min" class="control-label"></label>
                <input asp-for="Nombre_Joueur_Min" class="form-control" />
                <span asp-validation-for="Nombre_Joueur_Min" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre_Joueur_Max" class="control-label"></label>
                <input asp-for="Nombre_Joueur_Max" class="form-control" />
                <span asp-validation-for="Nombre_Joueur_Max" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duree_Minute" class="control-label"></label>
                <input asp-for="Duree_Minute" class="form-control" />
                <span asp-validation-for="Duree_Minute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_Creation" class="control-label"></label>
                <input asp-for="Date_Creation" class="form-control" />
                <span asp-validation-for="Date_Creation" class="text-danger"></span>
            </div>
            <div class="form-group">
               
                <input asp-for="Cree_Par" value="@sessionManager.ConnectedUser.Utilisateur_Id" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
